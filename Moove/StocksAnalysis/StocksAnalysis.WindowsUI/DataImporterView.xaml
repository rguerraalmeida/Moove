<Window x:Class="StocksAnalysis.WindowsUI.DataImporterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DataImporterView" Height="159" Width="435" Loaded="Window_Loaded" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid >
        <Button Content="Download" Height="23" HorizontalAlignment="Left" Margin="12,0,0,29" Name="DownloadButton" VerticalAlignment="Bottom" Width="75" Click="DownloadButton_Click" />
        <Button Content="Save" Height="23" HorizontalAlignment="Right" Margin="0,0,245,29" Name="SaveButton" VerticalAlignment="Bottom" Width="75"  Visibility="Collapsed" />
        <ComboBox Height="23" HorizontalAlignment="Left" Margin="174,0,0,29" Name="SaveOptionsComboBox" VerticalAlignment="Bottom" Width="152" />
        <!--<Label Height="28" Margin="12,12,0,0" Name="CountProgressLabel" VerticalAlignment="Top" HorizontalAlignment="Left" Width="395" />-->
        <Label Height="28" Margin="12,12,12,0" Name="ItemProgressStatus" VerticalAlignment="Top" />
        
        <StatusBar Height="24" VerticalAlignment="Bottom">
            <StatusBarItem DockPanel.Dock="Left" HorizontalAlignment="Right">
                <ProgressBar  Width="300" Height="18" VerticalAlignment="Center"  Name="DownloadProgressBar" Value="0" />
            </StatusBarItem>
            <StatusBarItem DockPanel.Dock="Right">
                <TextBlock Height="18" Name="StatusTextBlock" Width="100" Text="" />
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
